{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "compile",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "reveal": "silent"
            },
            "problemMatcher": "$tsc"
        },
        {
            "type": "npm",
            "script": "watch",
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "shared",
                "reveal": "never"
            },
            "problemMatcher": [
                {
                    "base": "$tsc-watch",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "(\\s*)\\[(.*)\\]\\s+File change detected\\. Starting incremental compilation\\.\\.\\."
                        },
                        "endsPattern": {
                            "regexp": "(\\s*)\\[(.*)\\]\\s+Compilation complete\\. Watching for file changes\\."
                        }
                    }
                }
            ]
        }
    ]
}